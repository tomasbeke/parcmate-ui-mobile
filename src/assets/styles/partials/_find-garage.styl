.find-garage
  color $blue
  .container
    padding 0
    background $white
    width 100%!important
    margin-top 0
  h1
    text-align right
    font-size $font-size-x-large
    font-weight $font-light
    .customer
      font-weight $font-bold
// Garage Controls Footer
.garage-controls
  text-align center
  box-shadow $box-shadow-dark-top
  background $white
  height auto
  width 100%
  position absolute
  bottom 0
  z-index 1000
  .selectors
    text-align center
    color $blue
    border-bottom $gray-border
    .tabs
      border-right $gray-border
      min-height 60px
      &:last-child
        border none
      select, input
        font-size $font-size-large
        color $blue
        font-weight $font-bold
      span
        margin-top 5px
        font-size $font-size-base
        display block
  .options
    .option
      padding 5px 0
      background $gray-light
      color $white
      font-weight $font-light
      border-right $white-border
      &:last-child
        border 0 none
      &.best
        background $light-orange
      &.closest
        background $light-blue
      &.cheapest
        background $light-green
      > div
        > span
          display block
      .type-of
        border-bottom $white-border
        margin 0 0 5px 0
        padding 0 0 5px 0
        .price
          font-size $font-size-large
          .amount
            font-weight $font-bold
      .location
        .address
          font-weight $font-bold
