// Main Screen
.landing
  background-image url('../../assets/images/landing-bkg.jpg')
  background-repeat no-repeat
  background-position center
  background-size cover
  background-attachment fixed
  text-align center
  font-size $font-size-large
  font-weight 400
  color $white
  &.login
    .row
      &:nth-child(4)
        span
          padding 10px 0
          display block
          font-size $font-size-x-large
  .container
    background-color $transparent
    .error
      display block
      padding 15px

    form
      .form-group
        margin-top 0
        margin-bottom 1px
        opacity .5
        z-index 1
        border none
        &:nth-child(2)
          margin 0
      .btn
        margin 0
    .forgot-credentials
      padding 0 15px
      div
        padding 0
        .label
          display block
          height 75px
          line-height 75px
          padding 0
          font-size $font-size-large
          background $black
          border-left $white-border
          border-bottom $white-border
          border-radius 0
        .btn
          border-top 0
          font-size $font-size-large
        &:nth-child(2)
          .btn
            border-right 0

  h1
    font-size $font-size-large
    font-weight 400
    margin 20px 0

  .landing-links
    .row
      margin 0
      &:nth-child(2)
        .landing-act
          height 100px

    .landing-act
      box-shadow 1px 0 0 0 #fff, 0 1px 0 0 #fff, 1px 1px 0 0 #fff, 1px 0 0 0 #fff inset, 0 1px 0 0 #fff inset
      height 280px

      &:before
        content ' '
        display block
        position absolute
        left 0
        top 0
        width 100%
        height 100%
        z-index 1
        opacity .5
        background-image url('../../assets/images/bkg-opacity.png')
        background-repeat repeat
        background-position 50% 0
        background-size cover

      a
        color $white
        display block
        width 100%
        text-align center
        z-index 2
        left 0
        vertical-align(absolute)

        .sprite
          margin 0 auto 20px
          position relative
          &.sprite-notifications
            overflow visible
            i
              position absolute
              display inline-block
              height 40px
              width 40px
              border-radius 40px
              text-indent 0
              font-style normal
              line-height 40px
              right -10px
              top 0

          &:after
            content 'icon'
            display block
// Login
.login
  padding-top 50px

  .login-call
    color $white
    font-weight 700
    .fa
      color $white
