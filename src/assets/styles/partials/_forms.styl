input[type='text']
select
  appearance none
  border none
form
  .row
    font-size $font-size-large
    background-color $white
    display flex
    flex-flow row no-wrap
    justify-content center
    align-items center
    margin 0
    padding 0
  .btn
    margin-top 15px
  .form-group
    height 75px
    border-bottom $gray-border
    &:first-child
      margin-top 15px
    .border-right
      border-right $gray-border
    .select-field
      height inherit
      padding-top 25px
    label
      color $gray
      font-weight 400
      text-align left
      margin-bottom 0
    .form-control
      height auto
      font-weight 400
      border 0 none
      box-shadow none
      color $gray
      background-color none
      font-size $font-size-large
      padding 0
select
  color $gray
  cursor pointer
  background $white
  option
    color $gray
.mock-dropdown
  position relative
  clearfix()
  .icon-angle-down
    position absolute
    top -2px
    left 0
    font-size $font-size-x-large
  select
    padding-left 25px!important
    // Repeat for outside form
    height auto
    border 0 none
    box-shadow none
    color $gray
    background-color none
    padding 0
