form
  .row
    font-size $font-size-large
    background-color $white
    display flex
    flex-flow row no-wrap
    align-items center
    margin 0
    padding 0
  .form-group
    height 75px
    border-bottom $gray-border
    .border-right
      border-right $gray-border
    .select-field
      height inherit
      padding-top 25px
    label
      color $dark-gray
      font-weight 400
      text-align left
      margin-bottom 0
    .form-control
      height auto
      font-weight 400
      border 0 none
      box-shadow none
      color $black
      background-color none
      font-size $font-size-large
