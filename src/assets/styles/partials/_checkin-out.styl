.checkin-out
  padding 0
  .container-fluid
    background $white
    .row
      > div
        margin 5px 0
    .masthead
      background $white
      text-align center
      > div
        margin 20px 0
      h1
        padding 0
        margin 0
        font-size $font-size-large
        .sprite
          display-type(inline-block)
          margin-right 10px
          vertical-align middle
    .info
      p
        padding 0 20px
        margin 0
        text-align center

    // Car carousel
    .car-carousel
      text-align center
      position relative
      .car-selected-nav
        position absolute
        top 35%
        z-index 100
        i
          cursor pointer
        &.disabled
          i
            color $gray-lighter
        &.car-selected-prior
          left 0
        &.car-selected-next
          right 0
      .car-scroller
        position relative
        white-space nowrap
        overflow-x auto
        min-height 200px
        width 100%
        .vehicle-wrap
          display-type(inline-block)
          min-height 200px
          width 100%
        .val-row
          font-weight $font-bold
          font-size $font-size-large
          margin 0 0 20px 0
          &:first-child
            margin-bottom 0
            margin-top 20px
          .vehicle-state
            font-weight $font-light


    // Reservation
    .reservations
      p
        font-size $font-size-large
        text-align center
        margin 0
        .sprite
          display-type(inline-block)
          margin-right 10px
          vertical-align top
      .reservation
        margin 0
        .row
          padding-bottom 15px
          background $gray-lighter
          display-type(flex)
          > div
            margin 0
            padding-top 15px
            padding-bottom 15px
            box-shadow-border($gray-lighter)
            background $white
            text-align center
            .sprite
              display-type(inline-block)
        .date-time
          color $black
          span
            display-type(block)
            &.date
              font-weight $font-bold
            &.time
              font-size $font-size-large
              font-weight $font-light
        .lot-location
          .sprite
            width 20px
            height 25px
          color $blue
          address
            .name
              font-weight $font-bold
            span
              display-type(block)
        .car-info
          padding 0!important
          span
            display-type(block)
          .car-make
            border-bottom $gray-border
            padding 15px 0
            .name
              font-weight $font-bold
          .controls
            flex-display(center)
            > div
              padding 10px 0
              width 50%
              &:last-child
                border-left $gray-border
                .icon.close
                  background $gray-dark

  // Checkout & My Tab Specific
  &.checkout
  &.my-tab-view
    .my-tab
      > div
        margin 0
        .row
          > div
            margin 0
            padding 0
          &.tab-header
            position relative
            .chevron-up
              position absolute
              left 15px
              top 10px
            > div
              padding 15px 0
              border-bottom $gray-border
            h2
              margin 0
              font-size $font-size-large
              text-align center
              .sprite
                margin-right 10px
              span
                display-type(inline-block)
                vertical-align middle
          &.tab-content
            display-type(flex)
            > div
              text-align center
              &.toggle-arrow
                background $gray-dark
                color $white
                border-left $white-border
                position relative
                i
                  color $white
                  vertical-align-center(absolute)
              &.current-rate-time
                background $blue
                color $white
                h3
                  background $dark-blue
              &.upcoming-rate-changes
                background $gray-lighter
                .content
                  display-type(flex)
                  .slot
                    flex-grow(1, 0)
                    .price
                      font-size $font-size-large
                      font-weight $font-bold
                h3
                  background #ccc
              .content
                padding 5px 0
                span
                  display-type(block)
                  &.timer
                    font-size $font-size-large
              h3
                margin 0
                padding 5px 0
                font-size $font-size-base
                font-weight $font-light
    .get-car-ready
      > div
        border-top $gray-border
        border-bottom $gray-border
        margin 0
      button
        background none
        width 100%
        border 0
        text-align center
        padding 15px 0
        .sprite
          margin-right 10px
        span
          display-type(inline-block)
          vertical-align middle
          color $blue
          font-size $font-size-large

  // My Tab Only
  &.my-tab-view
    .container-fluid
      background $gray-lighter
      .rate-register
        > div
        .cell
          margin 0
    .tab-header
      display-type(none)
    .get-car-ready
      margin-bottom 30px
      background $white
    .lot-info
      margin-top 30px
      margin-bottom 30px
