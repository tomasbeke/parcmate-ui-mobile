@import '_mixins'
@import '_typography'
@import '_buttons'
@import '_colors'
@import '_forms'
@import '_grid'
@import '_modals'
@import '_popup'

// Helpers
.sidebar
  background #eee
  .scrollable
    margin-top 90px
    .app-name
      color $gray


.list-group
  .list-group-item
    text-transform capitalize

.sprite
  clearfix()
  text-indent -999rem
  display block
  overflow hidden

.sprite-guide
  background $white!important
  .sprite-container
    padding 0
    margin-top 20px
    list-style none
    text-indent 0


.app-content
  ng-view
    height 100%

// Base

html
  font-size $font-size-root

.app
  background-color $white

.app-content
  position absolute
  top 0

// NavBar

.navbar
  position relative
  min-height 15px
  margin-bottom 20px
  border $transparent-border
  // Hide on Landing & Display on Find Garage
  .sign-out
    display none
    position absolute
    right 15px
    top 20px
    font-size $font-size-large
    a
      color $white
      font-weight $font-light
  .hamburger-menu
    .btn
      height auto
    display block
    position absolute
    left 15px
    top 60px
    .fa-bars
      font-size 3rem
      &:before
        content '\f0c9'

.navbar-app
  min-height 15px
  background $gray-lighter
  color $blue
  opacity .8

.navbar-absolute-top
.navbar-absolute-bottom
  position absolute
  z-index 1000
  border-width 0
  left 0
  right 0
  width 100%
  margin 0

.navbar-absolute-top
  top 0

.navbar-brand
  float left
  padding 0 15px
  height 52px
  line-height inherit

  h1
    font-weight 300
    text-transform uppercase
    margin-top 5px
    margin-bottom 0
    padding-bottom 5px
    padding-left 15px
    background-color $gray-lighter
    font-size $font-size-large
    width 185px
    position absolute
    left 0
    border-bottom-right-radius 50px
    transition all 600ms cubic-bezier(0.86, 0, 0.07, 1)
    clearfix()
    .logo
      width 36px
      height 41px
      background url('../../assets/images/logo-small.png')
      background-size 36px 41px
      background-repeat no-repeat
    span
      float left
      margin-right 10px
      &:nth-child(2)
        margin-top 10px
      i
        font-style normal
        &:nth-child(2)
          font-weight 700

.navbar-brand-left
  text-align left
  position absolute
  width 100%
  white-space nowrap
  overflow hidden
  text-overflow ellipsis

// Scrollable Content

.scrollable-content
  background-color $white
  padding-bottom 15px
  .container
  .container-fluid
    // for header
    margin-top 50px
    background-color $gray-lighter
    // Masthead
    .masthead
      background $white
      text-align center
      .header
        margin 20px 0
        h1
          padding 0
          margin 0
          font-size $font-size-large
          .sprite
            display-type(inline-block)
            margin-right 10px
            vertical-align middle
        .sprite
          margin-right 10px
  .action
    background-color $white
    box-shadow $box-shadow-gray
  .action-call
    display block
    padding 15px 0
    clearfix()
    text-align center
    font-size $font-size-large
    span
      color $black



// Rate Register Styles
.rate-register
  border 3px solid $black
  border-right none
  border-left none
  border-bottom-width 2px
  background $white
  .field
    border-bottom $dark-gray-border
    &.field-double-border-top
      border-top 2px solid $black
    &.field-double-border-bottom
      border-bottom 2px solid $black
    .cell
      .mock-dropdown
        .icon-angle-down
          top -4px
      padding 15px
      text-transform capitalize
      &.value-label
        text-align right
        font-weight $font-bold
      &.value
        text-align left
        &.bold
          font-weight $font-bold
