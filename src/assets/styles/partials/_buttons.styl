// Buttons
.btn
  border-radius 0
  height 75px
  width 100%
  padding 0
  border 1px solid #fff
  font-weight 300
  font-size 2.15rem
  color #fff

a.btn
  &:hover
    color $white

.btn-default
  background linear-gradient(#f7931e, #f15a24)

.btn-blue
  position relative
  overflow hidden

  &:before
    content ' '
    display block
    position absolute
    left 0
    top 0
    width 100%
    height 100%
    z-index 1
    opacity .5
    background-image url('../../assets/images/bkg-opacity.png')
    background-repeat repeat
    background-position 50% 0
    background-size cover
  span
    z-index 2
    position relative
    line-height 75px

.btn-large
  height 100px
  font-size 2.6rem
  background linear-gradient(#f7931e, #f15a24)

.icon
  &.add
  &.remove
  &.close
    float none
    display inline-block
    background-color $blue
    height 30px
    width 30px
    border-radius 30px
    color $white
    text-align center
    line-height 30px
    font-size $font-size-large
  &.close
    background-color $dark-gray
