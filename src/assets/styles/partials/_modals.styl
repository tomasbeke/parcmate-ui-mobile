.modal
  .modal-header
  .modal-footer
    border 0 none
  .modal-content
    border-radius 0
    p
      font-size $font-size-large
  .close
    background $gray-light

// Filter Modal
  .filter-modal
    background $gray-lighter
    .modal-footer
      padding-top 0
    .container
      padding 0 15px
      .form-group
        margin 0
        border 0 none
      .info-window
        color $blue
