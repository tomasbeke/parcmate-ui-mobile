.has-class-reservations
  .hamburger-menu
    display none
.reservations-container
  background $white
  padding-bottom 0
  // Info Sections
  .information
    .info-section
      border-bottom 4px solid $black
      padding 15px 15px 0
      h3
        position relative
        margin 0
        padding-bottom 15px
        .ratings-preview
          position absolute
          right 0
          top 4px
          color $black
          font-size $font-size-large
          .ratings-stars
            margin-right 40px
            .fa
              font-size $font-size-large
              color $gray
        a
          color $black
          font-weight $font-light
        .icon
          margin-right 10px
      .toggle
        display-type(block)
      .section-body
        display-type(block)
        background $white
        border-top 4px solid $black
        .col
          padding 15px
          .ratings-stars
            text-align right
            .fa
              font-size $font-size-large
              color $gray
      &.is-expanded
        .section-body
          display-type(block)

  .section-header
    text-align center
    padding 15px 0
    background $white
    h2
      padding 0
      margin 0
      font-size $font-size-large
      span
        display-type(inline-block)
        vertical-align middle
      .sprite
        margin-right 10px
  .lot-info
    margin-top 30px
    margin-bottom 30px
  .reservations-form
    padding 0
    .make-reservation
      .row
        border-top $gray-border
        background $white
        &.form-submit
          background $gray-lighter
          button
            margin 0
          .message
            padding 15px
            text-align center
            font-size $font-size-base
            font-weight $font-light
        &.rate-info
          padding 0
          border 4px solid $black
          border-left 0 none
          border-right 0 none
          margin 30px 0
          background $gray-lighter
          .section-rows
            background $white
          .form-group
            padding 15px 0
      .control
        .sprite
          display-type(inline-block)
        border-right $gray-border
        min-height 90px
        padding-bottom 10px
        padding-top 10px
        text-align center
        &:last-child
          border none
        input
        select
          color $blue
          font-weight $font-bold
          margin 0
          font-size $font-size-large
          border 0 none
        input[type='datetime-local']
          width 100%
        .control-text
          color $blue
          display block
          font-size $font-size-base
    .section-rows
      .form-group
        margin 0
        height auto
        border 0
