.account-settings
  .sign-up-form
    margin-top 15px
    padding 0
    fieldset
      background $gray-lighter
      padding-bottom 15px
    .terms-conditions
      .row
        .label-container
          text-align left
        background $gray-lighter
        .form-group
          margin-top 0
          padding 0
          height auto
          .checkbox-container
            input
              margin 0
  .section-header
    text-align center
    margin 0
    padding 15px 0
    background $white
    h2
      padding 0
      margin 0
      font-size $font-size-large
      .sprite
        margin-right 10px
      span
        display-type(inline-block)
        vertical-align middle
  .form-group
    padding-left 15px
    padding-right 15px
