.account-settings
  .contact-info
    margin 15px 0
    padding 15px 0
    background $white
    > .row:not(:last-child)
      padding-bottom 15px


    .field
      .field-label
        text-align right
      .field-info
        span
          display-type(block)
  .credit-card-information
    .card-expiration
      padding 0
      background $gray-lighter
      .select-field
        background $white
        border-bottom $gray-border
  .sign-up-form
    .change-password
      background $white
      border none
      color $blue
      font-weight $font-bold
    .remove-vehicle
      border-bottom 4px solid $black
      .vehicle-toggle
        background $gray-lighter
        height auto
        margin-bottom 15px
        margin-top 15px
        .toggle
          color $black
          text-decoration none
          padding 0
          i
            vertical-align middle
          .icon-angle-up
          .icon-angle-down
            font-size $font-size-x-large
            margin-right 10px
          .icon-angle-down
            margin-top 4px
    .add-another-vehicle
      .form-group
        margin-bottom 15px
      .add
      .remove
        text-align center
        button
          padding 0
          border none
          background none
          color $blue
          font-weight $font-bold
          .icon
            margin-right 10px
    .vehicle-label
      .row
        border 0 none
    .label-info
      background $gray-lighter
      padding-top 5px
    margin-top 15px
    padding 0
    fieldset
      background $gray-lighter
      padding-bottom 0
    .terms-conditions
      .row
        .label-container
          text-align left
        background $gray-lighter
        .form-group
          margin-top 0
          padding 0
          .checkbox-container
            padding 0
            .fa-checkbox
              margin-top 5px
              margin-left 5px
            input
              display none
              + .fa-checkbox
                &:before
                  content '\f096'
              &:checked
                + .fa-checkbox
                  &:before
                    content '\f046'
  .section-header
    text-align center
    margin 0
    padding 15px 0
    background $white
    h2
      padding 0
      margin 0
      font-size $font-size-large
      .sprite
        margin-right 10px
      span
        display-type(inline-block)
        vertical-align middle
  .form-group
    padding-left 15px
    padding-right 15px
    &.last-row
      margin-bottom 15px
    &.error-state
      border 2px solid $red
    &.error-state-message
      background $red
      color $white
      text-align center
      font-weight $font-light
      border none
